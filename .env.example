# ============================================
# SylaBot Environment Variables
# Copy this to .env and fill in your values
# ============================================

# ===== Database =====
DATABASE_URL="postgresql://sylabot:YOUR_PASSWORD@localhost:5432/sylabot?schema=public"

# ===== Redis =====
REDIS_URL="redis://localhost:6379"

# ===== Discord =====
DISCORD_CLIENT_ID="your_discord_client_id"
DISCORD_CLIENT_SECRET="your_discord_client_secret"
DISCORD_BOT_TOKEN="your_bot_token"

# ===== Security =====
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your_32_byte_hex_encryption_key"
AUTH_SECRET="your_random_auth_secret_32_chars"

# ===== URLs =====
NEXTAUTH_URL="https://dashboard.sylabot.io"
NEXT_PUBLIC_APP_URL="https://dashboard.sylabot.io"

# ===== PostHog Analytics =====
# Get from: https://posthog.com → Project Settings
NEXT_PUBLIC_POSTHOG_KEY="phc_xxxxxxxxxxxx"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# ===== Stripe Payments (Global) =====
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_xxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxx"
# Create products at: https://dashboard.stripe.com/products
STRIPE_PRICE_MONTHLY="price_xxxxxxxxxxxx"
STRIPE_PRICE_YEARLY="price_xxxxxxxxxxxx"

# ===== SePay Vietnam Banking =====
# Get from: https://sepay.vn → Dashboard
SEPAY_ACCOUNT_NUMBER="0123456789"
SEPAY_ACCOUNT_NAME="NGUYEN VAN A"
SEPAY_WEBHOOK_SECRET="your_sepay_webhook_secret"

# ===== Manager Service =====
MANAGER_PORT="3001"
MANAGER_API_KEY="your_internal_api_key"

# ===== Optional: Sentry Error Tracking =====
# SENTRY_DSN="https://xxx@sentry.io/xxx"
