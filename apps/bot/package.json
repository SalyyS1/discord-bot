{
  "name": "@repo/bot",
  "version": "1.0.0",
  "description": "Discord bot for gaming communities",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
