    "bullmq": "^5.66.5",
    "canvas": "^3.2.1",
    "discord-html-transcripts": "^3.3.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "ioredis": "^5.9.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
